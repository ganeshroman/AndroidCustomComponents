<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomComponents" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="dialog_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/margin_padding_x_tiny</item>
        <item name="android:layout_margin">@dimen/margin_padding_x_tiny</item>

        <item name="android:strokeColor">@color/white</item>
        <!--<item name="android:buttonCornerRadius">0dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/material_text_button</item>
    </style>

    <style name="text_input_edittext">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:singleLine">true</item>
    </style>



    <style name="text_views_cardTitle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:padding">@dimen/margin_padding_tiny</item>

        <item name="android:lines">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical</item>

    </style>


    <style name="text_views_message_gray">
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:padding">@dimen/margin_padding_tiny</item>

        <item name="android:lines">3</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center_vertical</item>

    </style>
</resources>